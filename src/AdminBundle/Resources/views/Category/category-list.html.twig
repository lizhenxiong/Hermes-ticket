}
.list-table-striped>.tr:nth-child(odd) {
  background-color: #f9f9f9;
}
.list-table>.th, .list-table>.tr{
  border-top: 1px solid #ddd;
  margin: 0;
}
.list-table .td {
  line-height: 45px;
  height: 45px;
  word-break: break-all;
  overflow: hidden;
}
.list-table-tree-icon {
  display: inline-block;
  width: 14px;
}
.treegrid-expander {
  cursor: pointer !important;
}

