<div tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" 
          data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h4 class="modal-title" id="myModalLabel">
          批量派发
        </h4>
      </div>
      <div class="modal-body">
        <form  class="form-horizontal" action="{{ path('admin_ticket_distribute') }}" method="post" accept-charset="utf-8" id="distribute-tickets-form">

          <div class="form-group">
            <label class="col-sm-2 control-label">编号</label>
            <div class="col-sm-10">
              <input id="selectedIds" type="hidden" name="selectedIds">
              <div class="form-group">
                <div class="col-sm-9">
                  <select class="form-control" name="operatorNo">
                    <option>请选择客服</option>
                    {% for operator in operators %}
                        <option value="{{ operator.operatorNo }}">{{ operator.username }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>
          </div>

      </div>
      {{ form_csrf_token() }}
      <div class="modal-footer">
        <button type="button" class="btn btn-default" 
        data-dismiss="modal">关闭
        </button>
        <button id="comfirm-distribute" type="button" class="btn btn-primary">
        确认派发
        </button>
      </div>
      </form>
    </div><!-- /.modal-content -->
  </div>
</div>
<!-- /.modal -->
<script src="{{ asset('assets/libs/validator/jquery.validate.min.js') }}"></script>
<script src="{{ asset('assets/libs/validator/messages_cn.js') }}"></script>
