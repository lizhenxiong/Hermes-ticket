{% extends "WebBundle:Default:layout.html.twig" %}

{% block title %}通知{% endblock %}

{% block body %}
<div style="min-height: 916px;">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
      <div class="box">
        <div class="panel panel-default panel-page">
          <div class="panel-heading">
            <h2> 通知 </h2>
          </div>
            <div id="message-table-container">
              <table class="table table-striped table-hover" align="center" valign="middle" id="message-table" width="50%">
                <tbody>
                  {% for notification in notifications %}
                    <tr class="message-tr" id="message-table-tr-3">
                      <td>
                        {% if 'ROLE_SERVICE' in app.user.roles|default() %}
                          <a href="{{ path('operator_ticket_detail', {id:notification.ticketId}) }}">{{notification.message}}</a>
                        {% else %}
                          <a href="{{ path('customer_ticket_detail', {id:notification.ticketId}) }}">{{notification.message}}</a>
                        {% endif %}
                      </td>
                    </tr>
                  {% endfor %}  
                </tbody>
              </table>
            {{ admin_macro.paginator(paginator) }}
            </div>
        </div><!-- /panel -->
      </div>
    </div>
    <div class="col-md-2"></div>
    </div>
</div>
{% endblock %}

