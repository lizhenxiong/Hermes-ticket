{% extends "WebBundle:Default:layout.html.twig" %}

{% block title %}历史工单{% endblock %}

{% block wrapper %}
  <div class="content-wrapper" style="min-height: 901px;">
    <div class="box box-info" style="min-height: 901px;">
      <div class="box-header with-border">
        <h3 class="box-title">该用户的历史工单</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
            <tr>
              <th>工单编号</th>
              <th>标题</th>
              <th>问题类型</th>
              <th>提交时间</th>
              <th>状态</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
              <tr>
                <td>{{ticket.id}}</td>
                <td>{{ticket.title}}</td>
                <td>{{ticket.category}}</td>
                <td>{{ticket.created|date('Y-m-d H:i:s')}}</td>
                <td><span class="label label-info">{{ dict_text('ticketStatus', ticket.status) }}</span></td>
                <td><a href="{{ path('operator_ticket_detail',{id:ticket.id}) }}">查看</a></td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
          {{ admin_macro.paginator(paginator) }}
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.box-body -->
    </div>
  </div>
{% endblock %}